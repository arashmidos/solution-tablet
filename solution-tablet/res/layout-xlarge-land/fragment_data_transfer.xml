<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
      android:id="@+id/get_images_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:drawableRight="@drawable/ic_action_download"
      android:text="@string/get_catalog"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:visibility="gone" />

    <Button
      android:id="@+id/sendDataBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/ic_action_upload"
      android:text="@string/send_data"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:visibility="gone" />

    <Button
      android:id="@+id/getDataBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/ic_action_download"
      android:text="@string/get_data"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:visibility="gone" />

  </LinearLayout>

  <ProgressBar
    android:id="@+id/dataTransferPB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_gravity="center"
    android:visibility="invisible" />

  <ScrollView
    android:id="@+id/transferSv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
      android:id="@+id/transferLogTxtV"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="vertical"
      android:textAppearance="?android:attr/textAppearanceSmall" />

  </ScrollView>
</LinearLayout>