<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
  android:layout_marginLeft="8dp"
  android:layout_marginRight="8dp"
  card_view:cardCornerRadius="2dp"
  card_view:cardElevation="3dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:gravity="right"
    android:orientation="vertical">
    <TextView
      android:id="@+id/title"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginRight="16dp"
      android:gravity="right"
      android:textColor="@color/primary_dark"
      android:textSize="16sp"
      tools:text="عنوان سر ستون" />
    <LinearLayout
      android:id="@+id/layout_1"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/column1_value"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="37sp"
        android:textColor="@color/gray_75"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />
      <TextView
        android:id="@+id/column1"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="right"
        android:textColor="@color/black_21"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_1e" />
    <LinearLayout
      android:id="@+id/layout_2"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/column2_value"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="37sp"
        android:textColor="@color/gray_75"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />
      <TextView
        android:id="@+id/column2"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="right"
        android:textColor="@color/black_21"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_1e" />
    <LinearLayout
      android:id="@+id/layout_3"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/column3_value"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="37sp"
        android:textColor="@color/gray_75"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />
      <TextView
        android:id="@+id/column3"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="right"
        android:textColor="@color/black_21"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_1e" />
    <LinearLayout
      android:id="@+id/layout_4"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/column4_value"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="37sp"
        android:textColor="@color/gray_75"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />
      <TextView
        android:id="@+id/column4"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="right"
        android:textColor="@color/black_21"
        android:textSize="12sp"
        tools:text="گاو وحشی شمال" />
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_1e" />

  </LinearLayout>
</android.support.v7.widget.CardView>