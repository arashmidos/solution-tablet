<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffffff">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:orientation="vertical"
      android:padding="20dp">

      <TextView
        android:id="@+id/textView30"
        style="@style/TextView.PageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="اطلاعات مشتری"/>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffdddce1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"/>

      <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
          android:id="@+id/phoneNumberTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="021-44477159"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView13"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="30dp"
          android:text="شماره تلفن:"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/codeTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="00111785"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView15"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="30dp"
          android:text="@string/customer_code_label"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/fullNameTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="مهیار سفیدی"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView9"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/customer_name_label"
          android:textAppearance="?android:attr/textAppearanceMedium"/>
      </TableRow>

      <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
          android:id="@+id/activityTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView29"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="30dp"
          android:text="نوع فعالیت:"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/cellPhoneTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="09126623027"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView14"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="شماره موبایل:"
          android:textAppearance="?android:attr/textAppearanceMedium"/>
      </TableRow>

      <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
          android:id="@+id/addressTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:lines="1"
          android:text="جنت آباد شمالی"
          android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
          android:id="@+id/textView12"
          style="@style/TextView.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="آدرس:"
          android:textAppearance="?android:attr/textAppearanceMedium"/>
      </TableRow>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffdddce1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"/>

      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/saveEnteringBtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:padding="15dp"
          android:src="@drawable/selector_enter_btn"/>

        <ImageView
          android:id="@+id/performanceBtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:padding="15dp"
          android:src="@drawable/selector_performance_btn"/>
      </LinearLayout>
    </LinearLayout>

  </ScrollView>
</LinearLayout>