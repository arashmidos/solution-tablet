<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

    <TextView
        android:id="@+id/textView32"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="31dp"
        android:text="سوال:"/>

    <TextView
        android:id="@+id/textView34"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView32"
        android:layout_alignRight="@+id/textView32"
        android:layout_below="@+id/textView32"
        android:layout_marginTop="18dp"
        android:text="پاسخ:"/>

    <TextView
        android:id="@+id/questionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView32"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/textView32"
        android:layout_toStartOf="@+id/textView32"
        android:text="چیدمان فروشگاه چگونه بود؟"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/answerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/questionTv"
        android:layout_alignRight="@+id/questionTv"
        android:layout_alignTop="@+id/textView34"
        android:text="100"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>