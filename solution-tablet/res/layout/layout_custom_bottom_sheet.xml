<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginBottom="8dp"
  android:paddingTop="8dp"
  android:paddingBottom="8dp"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/select_order_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical|right"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/select_order_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:maxLines="1"
      android:text="@string/title_order"
      android:textColor="@color/black"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/image_item_1"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginRight="16dp"
      android:src="@drawable/ic_path_24_dp" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/select_request_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical|right"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/select_request_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:maxLines="1"
      android:text="@string/title_request"
      android:textColor="@color/black"
      android:textSize="16sp" />


    <ImageView
      android:id="@+id/image_item_2"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginRight="16dp"
      android:src="@drawable/ic_path_24_dp" />
  </LinearLayout>

</LinearLayout>
