<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/feature_lay"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp"
  android:layout_marginLeft="8dp"
  android:layout_marginRight="8dp"
  card_view:cardCornerRadius="2dp"
  card_view:cardElevation="3dp">

  <RelativeLayout
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
      android:id="@+id/good_img"
      android:layout_width="62dp"
      android:layout_height="64dp"
      android:layout_marginTop="16dp"
      android:layout_marginStart="17dp"
      android:layout_marginEnd="17dp"
      android:layout_marginLeft="17dp"
      android:layout_marginRight="17dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true" />

    <TextView
      android:id="@+id/good_title_tv"
      style="@style/IranSans.Medium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="19dp"
      android:layout_marginStart="8dp"
      android:layout_toStartOf="@id/good_img"
      android:textColor="@color/black_85"
      android:textSize="12sp"
      tools:text="گالف ۲۵ مناسب برای هر سایز" />

    <TextView
      android:id="@+id/price_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/good_title_tv"
      android:layout_toStartOf="@id/good_img"
      android:text="@string/amount"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/inc_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_below="@id/price_tv"
      android:layout_toStartOf="@id/good_img"
      android:text="@string/inc"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/dec_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_below="@id/inc_tv"
      android:layout_toStartOf="@id/good_img"
      android:text="@string/dec"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/amount_tv"
      style="@style/IranSans"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="16dp"
      android:layout_below="@id/good_title_tv"
      android:layout_toStartOf="@id/price_tv"
      android:gravity="left"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />
    <TextView
      android:id="@+id/inc_amount_tv"
      style="@style/IranSans"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="16dp"
      android:layout_below="@id/amount_tv"
      android:layout_toStartOf="@id/inc_tv"
      android:gravity="left"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />
    <TextView
      android:id="@+id/dec_amount_tv"
      style="@style/IranSans"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="16dp"
      android:layout_below="@id/inc_amount_tv"
      android:layout_toStartOf="@id/dec_tv"
      android:gravity="left"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/total_price_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="11dp"
      android:layout_below="@id/dec_tv"
      android:layout_toStartOf="@id/good_img"
      android:text="@string/total_amount"
      android:textColor="@color/gray_75"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/total_amount_tv"
      style="@style/IranSans.Bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="16dp"
      android:layout_below="@id/dec_amount_tv"
      android:layout_toStartOf="@id/total_price_tv"
      android:gravity="left"
      android:textColor="@color/green_text"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/delete_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="25dp"
      android:layout_marginStart="27dp"
      android:layout_alignParentStart="true"
      android:layout_below="@id/total_amount_tv"
      android:src="@drawable/ic_delete_24_black"
      android:tint="@color/gray_75" />

    <ImageView
      android:id="@+id/edit_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="25dp"
      android:layout_marginStart="28dp"
      android:layout_below="@id/total_amount_tv"
      android:layout_toEndOf="@id/delete_img"
      android:src="@drawable/ic_edit_24_black"
      android:tint="@color/gray_75" />

    <TextView
      android:id="@+id/count_tv"
      style="@style/IranSans.Light"
      android:layout_width="96dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="23dp"
      android:layout_below="@id/total_price_tv"
      android:layout_toEndOf="@id/divider"
      android:gravity="center"
      android:textColor="@color/black_21"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/unit1_title_tv"
      style="@style/IranSans.Medium"
      android:layout_width="96dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="18dp"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/count_tv"
      android:gravity="center"
      android:textColor="@color/gray_75"
      android:textSize="10sp"
      tools:text="@string/number" />

    <View
      android:id="@+id/divider"
      android:layout_width="1dp"
      android:layout_height="33dp"
      android:layout_marginTop="21dp"
      android:layout_marginBottom="16dp"
      android:layout_below="@id/total_price_tv"
      android:layout_toStartOf="@id/unit1_title_tv"
      android:background="@color/navigation_drawer_divider" />

    <TextView
      android:id="@+id/unit2_count_tv"
      style="@style/IranSans.Light"
      android:layout_width="96dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="23dp"
      android:layout_below="@id/total_price_tv"
      android:layout_toStartOf="@id/divider"
      android:gravity="center"
      android:textColor="@color/black_21"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/unit2_title_tv"
      style="@style/IranSans.Bold"
      android:layout_width="96dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_below="@id/unit2_count_tv"
      android:layout_toStartOf="@id/divider"
      android:gravity="center"
      android:textColor="@color/gray_75"
      android:textSize="10sp"
      tools:text="@string/carton" />
  </RelativeLayout>
</androidx.cardview.widget.CardView>