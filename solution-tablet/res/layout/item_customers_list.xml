<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_lay"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/customer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_85"
            android:textSize="14sp"
            tools:text="محمد رضا گلزلر"/>

        <TextView
            android:id="@+id/customer_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/customer_name_tv"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:textColor="@color/login_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/customer_shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/customer_name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/customer_id_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/login_gray"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/has_location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:id="@+id/visit_today_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/has_location_img"
            />

        <ImageView
            android:id="@+id/has_order_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/visit_today_img"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>