<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_lay"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/order_code_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginStart="16dp"
      android:layout_alignParentStart="true"
      android:textColor="@color/black_de"
      android:textSize="12sp"
      tools:text="کدسفارش:۱۲۳۴۵" />

    <TextView
      android:id="@+id/order_date_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="16dp"
      android:layout_alignParentEnd="true"
      android:textColor="@color/black_de"
      android:textSize="12sp"
      tools:text="پنجشنبه 2 مرداد 96" />

    <TextView
      android:id="@+id/order_total_price"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="16dp"
      android:layout_alignParentStart="true"
      android:layout_below="@id/order_date_tv"
      android:textColor="@color/register_order"
      android:textSize="12sp"
      tools:text="۱۲۳۴۵۶۷۸۹۰ریال" />

    <TextView
      android:id="@+id/customer_name_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="36dp"
      android:layout_marginEnd="16dp"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/order_total_price"
      android:gravity="center_vertical"
      android:textColor="@color/black_de"
      android:textSize="12sp"
      tools:text="آرش نوری" />
    <TextView
      android:id="@+id/customer_code_tv"
      style="@style/IranSans.Light"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
      android:layout_alignBaseline="@id/customer_name_tv"
      android:layout_below="@id/order_total_price"
      android:layout_toLeftOf="@id/customer_name_tv"
      android:gravity="center_vertical"
      android:textColor="@color/login_gray"
      android:textSize="12sp"
      tools:text="123456" />

    <ImageView
      android:id="@+id/order_count_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="16dp"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/order_date_tv"
      android:src="@drawable/ic_cart_outline_black_18dp"
      android:tint="@color/login_gray" />

    <TextView
      android:id="@+id/order_count_tv"
      style="@style/IranSans.Light"
      android:layout_width="42dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="8dp"
      android:layout_below="@id/order_date_tv"
      android:layout_toStartOf="@id/order_count_img"
      android:gravity="right"
      android:textColor="@color/login_gray"
      android:textSize="12sp"
      tools:text="23" />

    <ImageView
      android:id="@+id/order_payment_method_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_below="@id/order_date_tv"
      android:layout_toStartOf="@id/order_count_tv"
      android:src="@drawable/ic_attach_money_18_dp"
      android:tint="@color/login_gray" />

    <TextView
      android:id="@+id/order_payment_method_tv"
      style="@style/IranSans.Light"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="8dp"
      android:layout_below="@id/order_date_tv"
      android:layout_toStartOf="@id/order_payment_method_img"
      android:textColor="@color/login_gray"
      android:textSize="12sp"
      tools:text="چک ۱۰ روزه" />
    <LinearLayout
      android:id="@+id/upload_img_layout"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginEnd="8dp"
      android:layout_below="@id/order_total_price"
      android:layout_toEndOf="@+id/edit_img_layout"
      android:gravity="center">
      <ImageView
        android:id="@+id/upload_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_upload_24dp"
        android:tint="@color/gray_75" />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/delete_img_layout"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="8dp"
      android:layout_below="@id/order_total_price"
      android:gravity="center">
      <ImageView
        android:id="@+id/delete_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_24_black"
        android:tint="@color/gray_75" />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/edit_img_layout"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginEnd="8dp"
      android:layout_below="@id/order_total_price"
      android:layout_toEndOf="@id/delete_img_layout"
      android:gravity="center">
      <ImageView
        android:id="@+id/edit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_24_black"
        android:tint="@color/gray_75" />
    </LinearLayout>
    <TextView
      android:id="@+id/order_status_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_below="@+id/order_total_price"
      android:text="@string/sent"
      android:textColor="@color/primary_dark"
      android:textSize="12sp"
      tools:visibility="visible"
      android:visibility="gone" />
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/navigation_drawer_divider" />
</LinearLayout>