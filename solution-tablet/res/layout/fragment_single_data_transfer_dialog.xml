<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white_fa"
  android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
      android:id="@+id/toolbar_container"
      android:layout_width="match_parent"
      android:layout_height="56dp">

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:title=""
        app:titleTextColor="@color/white">

      </android.support.v7.widget.Toolbar>

      <TextView
        android:id="@+id/toolbar_title"
        style="@style/IranSans.Medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/send_visit_data"
        android:textColor="@color/primary"
        android:textSize="16sp" />

      <Button
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center|end"
        android:background="@drawable/ic_close_24dp"
        android:backgroundTint="@color/login_gray" />
    </FrameLayout>
  </android.support.design.widget.AppBarLayout>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp" />
  <RelativeLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="bottom"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@drawable/top_border">
    <Button
      android:id="@+id/upload_data_btn"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:background="@drawable/get_data_background"
      android:drawableEnd="@drawable/ic_cloud_upload_black_18dp"
      android:drawablePadding="6dp"
      android:drawableRight="@drawable/ic_cloud_upload_white_24dp"
      android:drawableTint="@color/white"
      android:gravity="center"
      android:text="@string/send_data"
      android:textColor="@color/white"
      android:textSize="14sp" />

    <TextView
      android:id="@+id/cancel_btn"
      style="@style/IranSans.Medium"
      android:paddingRight="24dp"
      android:paddingLeft="24dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:text="@string/cancel_btn"
      android:textColor="@color/red"
      android:textSize="14sp"
      android:gravity="center_vertical"
      android:layout_alignParentTop="true"
      android:layout_alignParentBottom="true" />
  </RelativeLayout>
</FrameLayout>