<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  tools:context="com.parsroyal.solutiontablet.ui.fragment.OrderInfoFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/customer_name_tv"
          style="@style/IranSans.Medium"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:gravity="end|center"
          android:textColor="@color/black_85"
          android:textSize="14sp"
          tools:text="حسن آقا" />

        <TextView
          style="@style/IranSans"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="16dp"
          android:layout_gravity="end"
          android:gravity="center"
          android:text="@string/customer_name_label"
          android:textColor="@color/login_gray"
          android:textSize="14sp" />

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="16dp"
          android:layout_gravity="end"
          android:src="@drawable/ic_person"
          android:tint="@color/login_gray" />

      </LinearLayout>


      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_drawer_divider" />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
          android:id="@+id/date_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="16dp"
          android:layout_alignParentEnd="true"
          android:gravity="center"
          android:text="تاریخ سفارش:"
          android:textColor="@color/login_gray"
          android:textSize="12sp"
          tools:text="تاریخ سفارش: " />

        <View
          android:id="@+id/divider"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_centerInParent="true"
          android:background="@color/navigation_drawer_divider" />

        <TextView
          android:id="@+id/date_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="8dp"
          android:layout_toEndOf="@id/divider"
          android:layout_toStartOf="@id/date_title_tv"
          android:gravity="center|start"
          android:textColor="@color/black_85"
          android:textSize="12sp"
          tools:text="۹۷/۱۲/۱۲" />

        <TextView
          android:id="@+id/order_code_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toStartOf="@id/divider"
          android:gravity="center"
          android:text="کد سفارش:"
          android:textColor="@color/login_gray"
          android:textSize="12sp"
          tools:text="کد سفارش :" />

        <TextView
          android:id="@+id/order_code_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:layout_alignParentStart="true"
          android:layout_toStartOf="@id/order_code_title_tv"
          android:gravity="center|start"
          android:textColor="@color/black_85"
          android:textSize="12sp"
          tools:text="۱۲۳۴" />
      </RelativeLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_drawer_divider" />
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
          android:id="@+id/radif_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="16dp"
          android:layout_alignParentEnd="true"
          android:gravity="center"
          android:text="@string/radif_title"
          android:textColor="@color/login_gray"
          android:textSize="12sp" />

        <View
          android:id="@+id/divider2"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_centerInParent="true"
          android:background="@color/navigation_drawer_divider" />

        <TextView
          android:id="@+id/radif_value_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="8dp"
          android:layout_toEndOf="@id/divider2"
          android:layout_toStartOf="@id/radif_tv"
          android:gravity="center|start"
          android:textColor="@color/black_85"
          android:textSize="12sp"
          tools:text="۴" />

        <TextView
          android:id="@+id/aghlam_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toStartOf="@id/divider2"
          android:gravity="center"
          android:text="@string/aghlam_title"
          android:textColor="@color/login_gray"
          android:textSize="12sp" />

        <TextView
          android:id="@+id/aghlam_value_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:layout_alignParentStart="true"
          android:layout_toStartOf="@id/aghlam_title_tv"
          android:gravity="center|start"
          android:textColor="@color/black_85"
          android:textSize="12sp"
          tools:text="۱۵" />
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_drawer_divider" />

      <TextView
        android:id="@+id/description_label"
        style="@style/IranSans.Medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:text="@string/description"
        android:textColor="@color/login_gray"
        android:textSize="12sp" />
      <TextView
        android:id="@+id/description_value"
        style="@style/IranSans.Medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:textColor="@color/black_85"
        android:textSize="12sp"
        tools:text="@string/description" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>
