<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_lay"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white_fa">
  <ImageView
    android:id="@+id/check_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:padding="16dp"
    android:src="@drawable/ic_done"
    android:tint="@color/primary"
    android:visibility="invisible" />

  <TextView
    android:id="@+id/reason_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/check_iv"
    android:padding="16dp"
    android:gravity="right|center"
    tools:text="لطفا کد اعتبار سنجی را در قسمت زیر وارد نمایید" />
  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_below="@id/reason_tv"
    android:background="@color/black_10" />

</RelativeLayout>