<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feature_lay"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/good_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="19dp"
            android:layout_toLeftOf="@id/good_img"
            android:layout_toStartOf="@id/good_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_85"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_title_tv"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/good_img"
            android:layout_toStartOf="@id/good_img"
            android:text="@string/amount"
            android:textColor="@color/gray_75"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_title_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/price_tv"
            android:layout_toStartOf="@id/price_tv"
            android:gravity="left"
            android:textColor="@color/gray_75"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_tv"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@id/good_img"
            android:layout_toStartOf="@id/good_img"
            android:text="@string/total_amount"
            android:textColor="@color/gray_75"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/total_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/total_price_tv"
            android:layout_toStartOf="@id/total_price_tv"
            android:gravity="left"
            android:textColor="@color/green_text"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:src="@drawable/ic_delete_24_black"
            android:tint="@color/gray_75"/>

        <ImageView
            android:id="@+id/edit_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@id/delete_img"
            android:layout_toRightOf="@id/delete_img"
            android:src="@drawable/ic_edit_24_black"
            android:tint="@color/gray_75"/>

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="@string/number"
            android:textColor="@color/gray_75"
            android:textSize="10sp"/>

        <View
            android:id="@+id/devider"
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/number_tv"
            android:layout_toStartOf="@id/number_tv"
            android:background="@color/navigation_drawer_divider"/>

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/number_tv"
            android:layout_toEndOf="@id/devider"
            android:layout_toRightOf="@id/devider"
            android:gravity="center"
            android:textColor="@color/black_21"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/carton_tv"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/devider"
            android:layout_toStartOf="@id/devider"
            android:gravity="center"
            android:text="@string/carton"
            android:textColor="@color/gray_75"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/carton_count_tv"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/carton_tv"
            android:layout_toLeftOf="@id/devider"
            android:layout_toStartOf="@id/devider"
            android:gravity="center"
            android:textColor="@color/black_21"
            android:textSize="18sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>