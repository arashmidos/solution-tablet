<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_lay"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white">

  <TextView
    android:id="@+id/payment_method_tv"
    style="@style/IranSans.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginStart="16dp"
    android:layout_alignParentStart="true"
    android:textColor="@color/black_de"
    android:textSize="12sp"
    tools:text="پرداخت الکترونیکی" />

  <TextView
    android:id="@+id/payment_date_tv"
    style="@style/IranSans.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:textColor="@color/black_de"
    android:textSize="12sp"
    tools:text="جمعه ۰۳ آذر ۹۶" />

  <TextView
    android:id="@+id/payment_tv"
    style="@style/IranSans.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_alignParentStart="true"
    android:layout_below="@id/payment_method_tv"
    android:textColor="@color/register_order"
    android:textSize="12sp"
    tools:text="۱۰۰۰۰ریال" />

  <TextView
    android:id="@+id/bank_detail_tv"
    style="@style/IranSans.Light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/payment_date_tv"
    android:textColor="@color/black_de"
    android:textSize="12sp"
    tools:text="بانک ملی" />

  <LinearLayout
    android:id="@+id/delete_img_layout"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:layout_below="@+id/payment_tv"
    android:gravity="center">
    <ImageView
      android:id="@+id/delete_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_delete_24_black"
      android:tint="@color/gray_75" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/edit_img_layout"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="8dp"
    android:layout_below="@id/payment_tv"
    android:layout_toRightOf="@id/delete_img_layout"
    android:gravity="center">
    <ImageView
      android:id="@+id/edit_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_edit_24_black"
      android:tint="@color/gray_75" />
  </LinearLayout>
  <TextView
    android:id="@+id/payment_status_tv"
    style="@style/IranSans.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginStart="16dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/payment_tv"
    android:text="@string/sent"
    android:textColor="@color/primary_dark"
    android:textSize="12sp"
    android:visibility="invisible" />
  <TextView
    android:id="@+id/customer_name_tv"
    style="@style/IranSans.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/bank_detail_tv"
    android:textColor="@color/black_de"
    android:textSize="12sp"
    android:visibility="gone"
    tools:text="آرش نوری"
    tools:visibility="visible" />
  <TextView
    android:id="@+id/customer_code_tv"
    style="@style/IranSans.Light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_alignBaseline="@id/customer_name_tv"
    android:layout_toStartOf="@id/customer_name_tv"
    android:textColor="@color/gray_75"
    android:textSize="12sp"
    tools:text="(12345)" />
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:layout_below="@id/delete_img_layout"
    android:background="@color/navigation_drawer_divider" />

</RelativeLayout>