<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="right"
  android:padding="5dp"
  android:gravity="right"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="2dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="238dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/goods_unit_title_2"
        style="@style/TextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2کارتن" />

      <TextView
        android:id="@+id/textView58"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="واحد ۲: " />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/sale_rate_count"
        style="@style/TextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6عدد" />

      <TextView
        android:id="@+id/textView59"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="ضریب فروش: " />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/total_amount"
        style="@style/TextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:text="100,0000" />

      <TextView
        android:id="@+id/textView60"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="جمع: " />
    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="2dp"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:background="@color/gray" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/goodNameTv"
        style="@style/TextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="استند 20 سانتی ک" />

      <TextView
        android:id="@+id/textView56"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="نام کالا" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <Spinner
        android:id="@+id/goodUnitsSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right" />

      <EditText
        android:id="@+id/countTxt"
        style="@style/EditBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:digits="1234567890.۰۱۲۳۴۵۶۷۸۹"
        android:ems="10"
        android:inputType="numberDecimal" />

      <TextView
        android:id="@+id/textView52"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="تعداد/مقدار کالا:" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="right"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/error_msg"
        style="@style/TextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:visibility="gone"
        tools:text="ضریب فروش کالا باید ۶ عدد باشد" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:orientation="horizontal">

      <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_cancel"
        android:drawableTint="@color/red"
        android:text="انصراف" />

      <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_tick"
        android:drawableTint="@color/green"
        android:text="تایید" />
    </LinearLayout>
  </LinearLayout>
  <ImageView
    android:id="@+id/goods_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"/>
</LinearLayout>