<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:fillViewport="true">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/primary"
      android:elevation="3dp">
      <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_close_24dp"
        android:tint="@color/white" />
      <TextView
        android:id="@+id/title_tv"
        style="@style/IranSans.Medium"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:paddingRight="32dp"
        android:gravity="center"
        android:text="@string/filters"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="گالف ۱۲۳۴" />

    </RelativeLayout>
    <EditText
      android:id="@+id/good_count"
      style="@style/IranSans.Light"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:layout_below="@id/toolbar"
      android:layout_centerHorizontal="true"
      android:gravity="center_horizontal"
      android:inputType="numberDecimal"
      android:textColor="#000000"
      android:textSize="72sp"
      tools:text="۴" />
    <ImageView
      android:id="@+id/minus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="128dp"
      android:layout_marginStart="37dp"
      android:src="@drawable/im_remove" />
    <ImageView
      android:id="@+id/add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="128dp"
      android:layout_marginEnd="37dp"
      android:layout_alignParentEnd="true"
      android:src="@drawable/im_add" />
    <RelativeLayout
      android:id="@+id/spinner_lay"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginTop="32dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_below="@+id/good_count">

      <Spinner
        android:id="@+id/spinner"
        style="@style/IranSans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="right"
        android:prompt="@string/number" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/login_gray" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_drop_down"
        android:tint="@color/login_gray" />

    </RelativeLayout>
    <LinearLayout
      android:id="@+id/number_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="20dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_below="@id/spinner_lay"
      android:orientation="horizontal"
      >

      <LinearLayout
        android:visibility="gone"
        android:id="@+id/unit1_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/unit1_count_tv"
          style="@style/IranSans.Light"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/gray_75"
          android:textSize="24sp"
          tools:text="0" />

        <TextView
          android:id="@+id/unit1_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:textColor="@color/gray_75"
          android:textSize="12sp"
          tools:text="@string/number" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/unit2_lay"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/unit2_count_tv"
          style="@style/IranSans.Light"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/gray_75"
          android:textSize="24sp"
          tools:text="0" />

        <TextView
          android:id="@+id/unit2_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/carton"
          android:textColor="@color/gray_75"
          android:textSize="12sp" />
      </LinearLayout>
      <LinearLayout
        android:visibility="gone"
        android:id="@+id/unit3_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/unit3_count_tv"
          style="@style/IranSans.Light"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/gray_75"
          android:textSize="24sp"
          tools:text="0" />

        <TextView
          android:id="@+id/unit3_title_tv"
          style="@style/IranSans.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/carton"
          android:textColor="@color/gray_75"
          android:textSize="12sp" />
      </LinearLayout>

    </LinearLayout>
    <LinearLayout
      android:visibility="gone"
      tools:visibility="visible"
      android:id="@+id/convert_lay"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_below="@id/number_layout"
      android:background="@drawable/tab_shape_focused_primary"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:id="@+id/unit21_tv"
        style="@style/IranSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primary"
        android:textSize="12sp"
        tools:text="هرکارتن = 5عدد" />
      <TextView
        android:id="@+id/unit31_tv"
        style="@style/IranSans"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primary"
        android:textSize="12sp"
        tools:text="هرکارتن = 5عدد" />
    </LinearLayout>

    <TextView
      android:id="@+id/confirm_btn"
      style="@style/IranSans.Medium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_alignParentBottom="true"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      android:background="@color/primary"
      android:gravity="center"
      android:text="@string/submit"
      android:textColor="@color/white"
      android:textSize="14sp" />
  </RelativeLayout>
</android.support.v4.widget.NestedScrollView>