<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tabLayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#ffffff"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/dashboardTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="true"
    android:scaleType="fitXY"
    android:tag="12" />

  <ImageView
    android:id="@+id/customerListTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="true"
    android:scaleType="fitXY"
    android:tag="0" />

  <ImageView
    android:id="@+id/newCustomerTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="true"
    android:scaleType="fitXY"
    android:tag="1" />

  <ImageView
    android:id="@+id/questionaryTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="true"
    android:scaleType="fitXY"
    android:tag="26" />

  <ImageView
    android:id="@+id/goodsTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="false"
    android:scaleType="fitXY"
    android:tag="16" />

  <ImageView
    android:id="@+id/ordersTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="true"
    android:scaleType="fitXY"
    android:tag="14" />

  <ImageView
    android:id="@+id/fundsTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="false"
    android:scaleType="fitXY"
    android:tag="23" />

  <ImageView
    android:id="@+id/userPerformanceTabIv"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clickable="false"
    android:scaleType="fitXY"
    android:tag="22" />

</LinearLayout>