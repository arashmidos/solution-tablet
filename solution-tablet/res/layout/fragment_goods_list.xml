<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:orientation="horizontal">

    <EditText
        android:id="@+id/searchTxt"
        style="@style/EditBox"
        android:layout_width="300dip"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView55"
        style="@style/TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="جستجو:" />
  </LinearLayout>

  <TableLayout
      android:id="@+id/goodsDataTableHeaders"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="15dp"
      android:gravity="right">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">

      <TextView
          android:id="@+id/operationsHeader"
          style="@style/TextView.Cell"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:gravity="center_vertical|center_horizontal"
          android:text="عملیات"
          android:visibility="invisible" />

      <TextView
          android:id="@+id/tvPaymentTime"
          style="@style/TextView.Cell"
          android:layout_width="100dp"
          android:layout_height="fill_parent"
          android:layout_marginLeft="0dp"
          android:layout_weight="0"
          android:gravity="center_vertical|center_horizontal"
          android:text="راس پرداخت" />

      <TextView
          android:id="@+id/tvRemaining"
          style="@style/TextView.Cell"
          android:layout_width="150dp"
          android:layout_marginLeft="0dp"
          android:layout_weight="0"
          android:gravity="center_vertical|center_horizontal"
          android:text="موجودی" />

      <TextView
          android:id="@+id/textView53"
          style="@style/TextView.Cell"
          android:layout_width="105dp"
          android:layout_marginLeft="0dp"
          android:layout_weight="0"
          android:gravity="center_vertical|center_horizontal"
          android:text="قیمت واحد" />

      <TextView
          android:id="@+id/textView57"
          style="@style/TextView.Cell"
          android:layout_width="120dp"
          android:layout_marginLeft="0dp"
          android:gravity="center_vertical|center_horizontal"
          android:text="کد کالا" />

      <TextView
          android:id="@+id/textView75"
          style="@style/TextView.Cell"
          android:layout_width="250dp"
          android:layout_marginLeft="0dp"
          android:layout_weight="0"
          android:gravity="center_vertical|center_horizontal"
          android:text="نام کالا" />
    </TableRow>
  </TableLayout>

  <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="true"
      android:divider="@color/dark_gray"
      android:dividerHeight="10dp"
      android:fadeScrollbars="false"
      android:scrollbars="vertical"
      app:recyclerviewEmptyView="@layout/empty_view" />
</LinearLayout>