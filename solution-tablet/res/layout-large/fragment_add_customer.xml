<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="horizontal"
  android:weightSum="1"
  tools:context="com.parsroyal.solutiontablet.ui.fragment.AddCustomerFragment"
  tools:ignore="contentDescription">
  <View
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight=".25" />
  <ScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".5">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/full_name_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:gravity="end"
          android:hint="@string/full_name"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/full_name_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_state_background"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="sunstar" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
          android:id="@+id/company_code_icon"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="19dp"
          android:layout_marginEnd="20dp"
          android:layout_gravity="right|center"
          android:src="@drawable/ic_perm_identity"
          android:tint="@color/gray_75" />
      </LinearLayout>

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/national_code_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="62dp"
        android:gravity="end"
        android:hint="@string/national_code"
        android:textColorHint="@color/gray_9e"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <EditText
          android:id="@+id/national_code_edt"
          style="@style/IranSans"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/edit_text_state_background"
          android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
          android:gravity="right|center_vertical"
          android:imeOptions="actionNext"
          android:inputType="number"
          android:maxLines="1"
          android:textColor="@android:color/black"
          android:textSize="@dimen/text_normal"
          tools:text="1234567890" />

      </com.google.android.material.textfield.TextInputLayout>
      <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:zxing_preview_scaling_strategy="centerCrop"
        app:zxing_use_texture_view="false" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/shop_name_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:gravity="end"
          android:hint="@string/shop_name"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/shop_name_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_state_background"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="sunstar" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
          android:id="@+id/shop_icon"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="19dp"
          android:layout_marginEnd="20dp"
          android:layout_gravity="right|center"
          android:src="@drawable/ic_store"
          android:tint="@color/gray_75" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/phone_number_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:gravity="end"
          android:hint="@string/phone_number"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/phone_number_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_state_background"
            android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="1234567890" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
          android:id="@+id/phone_icon"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="19dp"
          android:layout_marginEnd="20dp"
          android:layout_gravity="right|center"
          android:rotation="270"
          android:src="@drawable/ic_phone_24dp"
          android:tint="@color/gray_75" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/mobile_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:gravity="end"
          android:hint="@string/cell_phone"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/mobile_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_state_background"
            android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="09123609446" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
          android:id="@+id/mobile_icon"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="19dp"
          android:layout_marginEnd="20dp"
          android:layout_gravity="right|center"
          android:src="@drawable/ic_phone_android_24dp"
          android:tint="@color/gray_75" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp">

          <TextView
            android:id="@+id/city_tv"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="right|center"
            android:text="@string/city"
            android:textColor="@color/black_21"
            android:textSize="14sp" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_9e" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray_9e" />

        </RelativeLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginEnd="16dp">

          <TextView
            android:id="@+id/state_tv"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="right|center"
            android:text="@string/state"
            android:textColor="@color/black_21"
            android:textSize="14sp" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_9e" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray_9e" />

        </RelativeLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/address_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:gravity="end"
          android:hint="@string/address"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/address_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_state_background"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="sunstar" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
          android:id="@+id/address_icon"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="19dp"
          android:layout_marginEnd="20dp"
          android:layout_gravity="right|center"
          android:src="@drawable/ic_location_on_24_dp"
          android:tint="@color/gray_75" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/postal_code_lay"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:gravity="end"
          android:hint="@string/postal_code"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/postal_code_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:background="@drawable/edit_text_state_background"
            android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="422543526" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/regional_municipality_lay"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginEnd="16dp"
          android:gravity="end"
          android:hint="@string/regional_municipality"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/regional_municipality_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:background="@drawable/edit_text_state_background"
            android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
            android:gravity="right|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="422543526" />

        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>

      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp">

        <LinearLayout
          android:id="@+id/location_lay"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="16dp"
          android:paddingBottom="16dp"
          android:orientation="horizontal">

          <TextView
            style="@style/IranSans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/location_on_map"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_normal" />

          <ImageView
            android:id="@+id/location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_gps_fixed_black_18dp"
            android:tint="@color/primary" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp">

          <Spinner
            android:id="@+id/ownership_spinner"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_9e" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray_9e" />

        </RelativeLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight=".5"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp">

          <TextView
            android:id="@+id/activity_tv"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="right|center"
            android:text="@string/activity_type"
            android:textColor="@color/black_21"
            android:textSize="14sp" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_9e" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray_9e" />

        </RelativeLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/store_meter_lay"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".5"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:gravity="right"
          android:hint="@string/store_meter"
          android:textColorHint="@color/gray_9e"
          app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

          <EditText
            android:id="@+id/store_meter_edt"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:background="@drawable/edit_text_state_background"
            android:digits="1234567890-۰۱۲۳۴۵۶۷۸۹"
            android:gravity="right|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:text="422543526" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".5"
          android:layout_marginEnd="16dp">

          <Spinner
            android:id="@+id/customer_class_spinner"
            style="@style/IranSans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:prompt="@string/store_meter" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_9e" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray_9e" />

        </RelativeLayout>
      </LinearLayout>
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="end"
        android:hint="@string/customer_description"
        android:textColorHint="@color/gray_9e"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <EditText
          android:id="@+id/description_edt"
          style="@style/IranSans"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/edit_text_state_background"
          android:gravity="right|center_vertical"
          android:imeOptions="actionNext"
          android:inputType="text"
          android:textColor="@android:color/black"
          android:textSize="@dimen/text_normal"
          tools:text="@string/customer_description" />

      </com.google.android.material.textfield.TextInputLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
          style="@style/IranSans"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:text="@string/customer_pics"
          android:textColor="@color/black_21"
          android:textSize="14sp" />
        <TextView
          android:id="@+id/image_counter"
          style="@style/IranSans"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:text="@string/customer_pics"
          android:textColor="@color/gray_bd"
          android:textSize="14sp"
          tools:text="1/10" />

      </RelativeLayout>
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/gray_f5" />
      <Button
        android:id="@+id/create_btn"
        style="@style/IranSans.Medium"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/payment_bottom_line"
        android:gravity="center"
        android:text="@string/create_save"
        android:textColor="@color/white"
        android:textSize="14sp" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>
