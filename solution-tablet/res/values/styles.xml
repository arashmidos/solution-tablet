<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light">
    <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
    <item name="android:typeface">serif</item>
    <item name="android:textColor">#000000</item>
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorAccent">#3F51B5</item>
    <item name="android:editTextColor">#000000</item>
  </style>


  <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/primary</item>
  </style>

  <style name="MyActionBar" parent="Theme.AppCompat.Light">
    <item name="android:background">#3F51B5</item>
    <item name="android:height">50dp</item>
  </style>

  <style name="TextView"></style>

  <style name="TextView.PageTitle">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textColor">@color/light_orange</item>
  </style>

  <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="MyTextInput">
    <item name="colorControlNormal">@color/login_gray</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlHighlight">@color/primary</item>
  </style>

  <style name="TextView.Caption">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:textColor">@color/dark_blue</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">7dp</item>
    <item name="android:layout_marginLeft">5dp</item>
  </style>

  <style name="TextView.Caption.Spinner" parent="TextView.Caption">
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="TextView.Value">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:layout_marginTop">5dp</item>
  </style>

  <style name="EditBox">
    <item name="android:padding">10dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:background">@drawable/selector_edit_box</item>
  </style>

  <style name="SearchBar">
    <item name="android:background">@drawable/selector_edit_box_serach</item>
  </style>

  <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
    <item name="android:layout_marginTop">5dp</item>
  </style>

  <style name="TextView.Cell">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textColor">@color/dark_blue</item>
    <item name="android:background">@drawable/headercellborder</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
  </style>

  <style name="TextView.Cell.Value">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:background">@drawable/valuecellborder</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingRight">5dp</item>
    <item name="android:paddingLeft">5dp</item>
  </style>

  <style name="MyButton" parent="Theme.AppCompat.Light">
    <item name="colorControlHighlight">@color/white30</item>
    <item name="colorButtonNormal">@color/gray</item>
  </style>

  <style name="Widget.GifView" parent="@android:style/Widget" />

  <style name="myDialog" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowMinWidthMajor">97%</item>
    <item name="android:windowMinWidthMinor">97%</item>
    <item name="colorPrimary">#3F51B5</item>
  </style>

  <style name="myDialog2" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">#80000000</item>
    <item name="colorPrimary">#3F51B5</item>
  </style>

  <style name="myCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
    <item name="colorPrimary">#3F51B5</item>
  </style>

  <!--fonts-->
  <style name="IranSans">
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
  </style>

  <style name="IranSans.Bold">
    <item name="fontPath">fonts/IRANSansMobile_Bold.ttf</item>
  </style>

  <style name="IranSans.Light">
    <item name="fontPath">fonts/IRANSansMobile_Light.ttf</item>
  </style>

  <style name="IranSans.Medium">
    <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
  </style>

  <style name="IranSans.Ultra">
    <item name="fontPath">fonts/IRANSansMobile_UltraLight.ttf</item>
  </style>
</resources>
