<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.activity.TabletReportDetailActivity">
  <RelativeLayout
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/primary"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/toolbar_title_tv"
      style="@style/IranSans.Medium"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:gravity="center"
      android:text="@string/my_kpi_list"
      android:textColor="@color/white"
      android:textSize="16sp" />
    <ImageView
      android:id="@+id/back_img"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_gravity="center"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:src="@drawable/ic_back_24_dp" />
  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/column4"
      style="@style/IranSans.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.25"
      android:layout_marginTop="13dp"
      android:layout_marginBottom="13dp"
      android:layout_marginLeft="16dp"
      android:ellipsize="end"
      android:gravity="right"
      android:textColor="@color/gray_72"
      android:textSize="14sp"
      tools:text="column1" />
    <TextView
      android:id="@+id/column3"
      style="@style/IranSans.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.25"
      android:layout_marginTop="13dp"
      android:layout_marginBottom="13dp"
      android:ellipsize="end"
      android:gravity="right"
      android:textColor="@color/gray_72"
      android:textSize="14sp" />
    <TextView
      android:id="@+id/column2"
      style="@style/IranSans.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.25"
      android:layout_marginTop="13dp"
      android:layout_marginBottom="13dp"
      android:ellipsize="end"
      android:gravity="right"
      android:textColor="@color/gray_72"
      android:textSize="14sp" />
    <TextView
      android:id="@+id/column1"
      style="@style/IranSans.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.25"
      android:layout_marginTop="13dp"
      android:layout_marginBottom="13dp"
      android:layout_marginRight="16dp"
      android:ellipsize="end"
      android:gravity="right"
      android:textColor="@color/gray_72"
      android:textSize="14sp" />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_1e" />
  <com.cooltechworks.views.shimmer.ShimmerRecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_demo_layout="@layout/layout_shimmer_kpi"
    app:shimmer_demo_shimmer_color="@color/shimmer_color" />

</LinearLayout>
