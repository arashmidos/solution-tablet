<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:editTextColor">#000000</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#3F51B5</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="ContaTab">
        <item name="android:background">@drawable/conta_tab_background</item>
        <item name="android:textColor">@color/conta_tab_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView"></style>

    <style name="TextView.PageTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/light_orange</item>
    </style>

    <style name="TextView.Caption">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="TextView.Caption.Spinner" parent="TextView.Caption">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextView.Value">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="EditBox">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/selector_edit_box</item>
    </style>

    <style name="EditBox.SearchBar" parent="EditBox">
        <item name="android:background">@drawable/selector_edit_box_serach</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Button">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="VisitDetailBtn">

    </style>

    <style name="TextView.Cell">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@drawable/headercellborder</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextView.Cell.Value">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@drawable/valuecellborder</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/white30</item>
        <item name="colorButtonNormal">@color/gray</item>
    </style>
    <style name="Widget.GifView" parent="@android:style/Widget"/>
</resources>
